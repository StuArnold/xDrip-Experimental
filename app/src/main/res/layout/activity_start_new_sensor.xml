<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:id="@+id/drawer_layout"
    android:layout_width="match_parent" android:layout_height="match_parent"
    tools:context="com.eveningoutpost.dexdrip.Home">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center_horizontal">
        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/scrollView4" >
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center_horizontal">
                <DatePicker
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:id="@+id/datePicker"
                    android:datePickerMode="spinner"
                    android:calendarViewShown="false"
                    android:layout_weight="0.30" />

                <TimePicker
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:id="@+id/timePicker"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentStart="true"
                    android:timePickerMode="spinner"
                    android:layout_weight="0.30"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Do not hit start sensor unless the sensor is already embedded and the transmitter is connected. \nPLEASE SELECT THE TIME AND DATE THE SENSOR WAS ACTUALLY INSERTED! (as close as you can recall!)"
                    android:id="@+id/textView"
                    android:layout_above="@+id/startNewSensor"
                    android:layout_toStartOf="@+id/startNewSensor"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="10dp"
                    android:gravity="center_horizontal"
                    android:textSize="15sp" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/sensor_location_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="Enter other location (needed for algorithm improvment)."
                        android:textSize="15sp"/>



                    <RadioGroup 
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/textView"
                        android:id="@+id/myRadioGroup"
                        android:checkedButton="@+id/sensor_location_private" >

                        <RadioButton 
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/sensor_location_private"
                            android:text="private" />
                        
                        <RadioButton 
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/sensor_location_hand"
                            android:text="hand" />

                        <RadioButton 
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/sensor_location_bottom"
                            android:text="bottom" />
				        
                        <RadioButton 
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/sensor_location_other"
                            android:text="other" />
                    </RadioGroup>

                    <EditText
                        android:id="@+id/edit_sensor_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:ems="10"
                        android:autoText="false"
                        android:text=""
                        android:singleLine="true"
                        android:textAlignment="center"
                        android:textSize="15sp"
                        android:layout_alignParentStart="true" />
                </LinearLayout>

                
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Start Sensor"
                    android:id="@+id/startNewSensor"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15dp" />
            </LinearLayout>
        </ScrollView>

    </LinearLayout>

    <fragment android:id="@+id/navigation_drawer"
        android:layout_width="@dimen/navigation_drawer_width" android:layout_height="match_parent"
        android:layout_gravity="start"
        android:name="com.eveningoutpost.dexdrip.NavigationDrawerFragment"
        tools:layout="@layout/fragment_navigation_drawer" />

</android.support.v4.widget.DrawerLayout>

